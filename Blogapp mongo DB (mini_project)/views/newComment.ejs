<%- include ('partials/header.ejs') -%>

<div class="container">
<div class="ui container segment">
<h1 style="text-align: center">Comment on <%= blog.name%></h1></div>
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/blogs/<%= blog._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" required placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" required placeholder="comment">
                </div>
                <div class="form-group">
                    <button  class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/blogs/<%= blog._id %>">Go Back</a>
        </div>
    </div>
</div>
<%- include ('partials/footer.ejs') -%>
